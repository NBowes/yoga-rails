<div class="ui three column centered grid">
  <div class="column">
      <%= form_tag login_path, class:'ui large form' do  %>
        <div class="ui stacked segment">
          <h2>
              Sign Up
          </h2>
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= text_field_tag :name, nil, placeholder: 'Full Name' %>
            </div>
            </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= text_field_tag :email, nil, placeholder: 'E-mail address' %>
            </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
              <%= password_field_tag :password, nil , placeholder: 'Password' %>
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
            <%= password_field_tag :password_confirmation, nil , placeholder: 'Confirm Password' %>
          </div>
        </div>
        <%= submit_tag "Create Account", class:'ui fluid large submit button' %>
        </div>
          <div class='ui error message'></div>
      <% end %>
  </div>
</div>


<%= javascript_include_tag 'users' %>
